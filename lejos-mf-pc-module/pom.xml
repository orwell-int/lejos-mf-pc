<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
	</properties>
	<modelVersion>4.0.0</modelVersion>
	<groupId>lejos.mf</groupId>
	<artifactId>pc-module</artifactId>
	<version>0.1.0</version>
	<name>LeJOS message framework - pc-module</name>
	<dependencies>
		<dependency>
			<groupId>lejos.mf</groupId>
			<artifactId>common</artifactId>
			<version>0.1.0</version>
		</dependency>
		<dependency>
			<groupId>lejos.pc</groupId>
			<artifactId>pccomm</artifactId>
			<version>0.9.1beta-3</version>
		</dependency>
		<dependency>
			<groupId>lejos.pc.3rdparty</groupId>
			<artifactId>bluecove</artifactId>
			<version>0.9.1beta-3</version>
		</dependency>
		<dependency>
			<groupId>net.sf.bluecove</groupId>
			<artifactId>bluecove-gpl</artifactId>
			<version>2.1.0</version>
		</dependency>
		<dependency>
			<groupId>org.slf4j</groupId>
			<artifactId>slf4j-api</artifactId>
			<version>1.7.7</version>
		</dependency>
	</dependencies>
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-install-plugin</artifactId>
				<version>2.5.2</version>
				<executions>
					<execution>
						<id>install-jar-lib-pccomm</id>
						<goals>
							<goal>install-file</goal>
						</goals>
						<phase>validate</phase>
						<configuration>
							<groupId>lejos.pc</groupId>
							<artifactId>pccomm</artifactId>
							<version>0.9.1beta-3</version>
							<packaging>jar</packaging>
							<file>${NXJ_HOME}/lib/pc/pccomm.jar</file>
							<generatePom>true</generatePom>
						</configuration>
					</execution>
					<execution>
						<id>install-jar-lib-pctools</id>
						<goals>
							<goal>install-file</goal>
						</goals>
						<phase>validate</phase>
						<configuration>
							<groupId>lejos.pc</groupId>
							<artifactId>pctools</artifactId>
							<version>0.9.1beta-3</version>
							<packaging>jar</packaging>
							<file>${NXJ_HOME}/lib/pc/pctools.jar</file>
							<generatePom>true</generatePom>
						</configuration>
					</execution>
					<execution>
						<id>install-jar-lib-bluecove</id>
						<goals>
							<goal>install-file</goal>
						</goals>
						<phase>validate</phase>
						<configuration>
							<groupId>lejos.pc.3rdparty</groupId>
							<artifactId>bluecove</artifactId>
							<version>0.9.1beta-3</version>
							<packaging>jar</packaging>
							<file>${NXJ_HOME}/lib/pc/3rdparty/bluecove.jar</file>
							<generatePom>true</generatePom>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>3.2</version>
				<configuration>
					<source>1.5</source>
					<target>1.5</target>
				</configuration>
			</plugin>
		</plugins>
	</build>
</project>
